<div id="cart">
<table class="table table-hover bg-table ls-cosmetics">
  <thead class="title_table">
    <tr>
      <th class="text-c"><%= t ".index" %></th>
      <th class="text-c"><%= t ".image" %></th>
      <th class="text-c"><%= t ".title" %></th>
      <th class="text-c"><%= t ".price" %></th>
      <th class="text-c"><%= t ".quantity" %></th>
    </tr>
  </thead>
  <tbody>
  <% @items.each_with_index do |item, index| %>
    <tr>
      <td class="text-c">
        <%= index_for params[:page], index, Settings.admin.cosmetic.per_page %>
      </td>
      <td class="text-c"><%= link_to image_tag(item.cosmetic.image.url, size: Settings.admin.cosmetic.image_size) , cosmetic_path(item.cosmetic) %></td>
      <td class="text-c"><%= link_to item.cosmetic.name, cosmetic_path(item.cosmetic) %> </td>
      <td class="price"><h4><%= number_to_currency item.paideach, locale: :vi %></h4></td>
      <td class="text-c"><%= item.quantity %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<table class="table table-hover bg-table ls-cosmetics">
  <tbody>
    <tr>
      <td id="total">
        <h4><%= t(".total", vnd: number_to_currency(current_user.cart_total, locale: :vi)) %></h4>
      </td>
    </tr>
  </tbody>
</table>
</div>
